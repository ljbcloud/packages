# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,py}]
charset = utf-8

[*.py]
indent_size = 4
indent_style = space

[Makefile]
indent_style = tab

[*.sh]
indent_size = 2
indent_style = space

[*.{json,yml}]
indent_style = space
indent_size = 2
